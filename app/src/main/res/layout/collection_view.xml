<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài Giảng"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <Button
                android:id="@+id/buttonLecture"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Bài giảng"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonMagazine"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Bài báo- tạp chí"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonCurriculum"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Chương trình đào tạo"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonLectureOutline"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Đề cương bài giảng"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonResearchTopic"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Đề tài nghiên cứu"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonEbook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="E-book chuyên ngành"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonTextBook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Giáo trình"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonGraduationThesis"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Khóa luận tốt nghiệp "
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonDoctoralThesis"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Luận án tiến sỹ"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonMasterThesis"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Luận văn thạc sỹ"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonEntrepreneurBook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Sách doanh nhân"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonPsychologyBook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Sách tâm lý - kỹ năng"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonReligiousBook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Sách tôn giáo - tâm linh"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonLibraryInformation"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Thông tin thư viện"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/buttonEducationBook"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="left"
                android:padding="10dp"
                android:text="Tủ sách giải trí - giáo dục "
                android:textColor="@color/button_text_selector" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:itemBackground="@color/background"
            app:itemIconSize="24dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/nav_bottom_bar" />
    </FrameLayout>

    <!-- FrameLayout chứa ImageView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/halfIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:elevation="10dp"
            android:src="@drawable/image_2" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>