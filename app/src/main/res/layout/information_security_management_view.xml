<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tìm kiếm"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Book Cover Image -->
    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/image_6" />

    <!-- Book Title and Author -->
    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Quản lý an toàn thông tin"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="Phạm Hoàng Duy; Nguyễn Ngọc Diệp (2022)"
        android:textColor="#757575"
        android:textSize="14sp" />

    <!-- Buttons (Xem online, Yêu thích) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D32F2F"
            android:text="Xem online"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#D32F2F"
            android:text="Yêu thích"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Detailed Book Information -->
    <TextView
        android:id="@+id/book_info_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:text="Thông tin chi tiết:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Book Details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý an toàn thông tin"
            android:textColor="#757575" />

        <!-- Author -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tác giả:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_author_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm Hoàng Duy; Nguyễn Ngọc Diệp"
            android:textColor="#757575" />

        <!-- Year of Publication -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Năm xuất bản:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textColor="#757575" />

        <!-- Publisher -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhà xuất bản:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học viện Công nghệ Bưu chính Viễn thông"
            android:textColor="#757575" />

        <!-- URI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="URI:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="http://dib.ptit.edu.vn/handle/VCNBCVT..."
            android:textColor="#757575" />

    </LinearLayout>

</LinearLayout>

